<% provide(:title, @employee_presenter.full_name) %>
<h1>Employee profile</h1>
<div class="col-md-12 row button-container">
  <div class="buttons">
    <%= render "shared/profiles/profile_buttons",
               record: @employee_presenter.model %>
  </div>
</div>
<div class="col-md-12 row record-display">
  <div class="col-md-4 record-column">
    <table>
      <tr>
        <th>Name</th>
        <td><%= @employee_presenter.full_name %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @employee_presenter.email_link %></td>
      </tr>
      <tr>
        <th>Phone</th>
        <td><%= @employee_presenter.formatted_phone %></td>
      </tr>

      <%= render "shared/profiles/address",
                 presenter: @employee_presenter %>

    </table>
  </div>
  <div class="col-md-4 record-column">
    <table>
      <tr>
        <th>DOB</th>
        <td><%= @employee_presenter.formatted_dob %></td>
      </tr>
      <tr>
        <th>Gender</th>
        <td><%= @employee_presenter.gender %></td>
      </tr>
      <tr>
        <th>Fed tax status:</th>
        <td><%= @employee_presenter.fed_status_to_human %> </td>
      </tr>
      <tr>
        <th>CA tax status:</th>
        <td><%= @employee_presenter.ca_status_to_human %></td>
      </tr>
      <tr>
        <th>Fed allowances:</th>
        <td><%= @employee_presenter.fed_allowances %></td>
      </tr>
      <tr>
        <th>CA allowances:</th>
        <td><%= @employee_presenter.ca_allowances %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-4 record-column">
    <table>
      <tr>
        <th>Title:</th>
        <td><%= @employee_presenter.title_to_human %></td>
      </tr>

      <%= render "employee_pay" %>

      <tr>
        <th>Hire date:</th>
        <td><%= @employee_presenter.formatted_hire_date %></td>
      </tr>

      <%= render "employee_term_date" %>

      <%= render "shared/profiles/magic_columns",
                 presenter: @employee_presenter %>

  </table>
  </div>
</div>
<h4>Stats</h4>
<div class="col-md-12 row record-display">
  <div class="col-md-4 record_column">
    <h5>Lifetime</h5>
    <table>
      <tr>
        <th>Shifts</th>
        <td><%= @employee_presenter.shifts_lifetime %></td>
      </tr>
      <tr>
        <th>Fundraising shifts</th>
        <td><%= @employee_presenter.fundraising_shifts_lifetime %></td>
      </tr>
      <tr>
        <th>Donations</th>
        <td><%= @employee_presenter.donations_lifetime %></td>
      </tr>
      <tr>
        <th>Successful donations</th>
        <td><%= @employee_presenter.successful_donations_lifetime %></td>
      </tr>
      <tr>
        <th>Raised</th>
        <td><%= @employee_presenter.formatted_raised_lifetime %></td>
      </tr>
      <tr>
        <th>Average</th>
        <td><%= @employee_presenter.formatted_average_lifetime %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-4 record_column">
    <h5>This week</h5>
    <table>
      <tr>
        <th>Shifts</th>
        <td><%= @employee_presenter.shifts_this_week %></td>
      </tr>
      <tr>
        <th>Fundraising shifts</th>
        <td><%= @employee_presenter.fundraising_shifts_this_week %></td>
      </tr>
      <tr>
        <th>Donations</th>
        <td><%= @employee_presenter.donations_this_week %></td>
      </tr>
      <tr>
        <th>Successful donations</th>
        <td><%= @employee_presenter.successful_donations_this_week %></td>
      </tr>
      <tr>
        <th>Raised</th>
        <td><%= @employee_presenter.formatted_raised_this_week %></td>
      </tr>
      <tr>
        <th>Average</th>
        <td><%= @employee_presenter.formatted_average_this_week %></td>
      </tr>
    </table>
  </div>
</div>
<hr />
<%= render "shared/profiles/dependent_shifts",
           shift_presenters: @shift_presenters %>

<%= render "shared/profiles/dependent_paychecks",
           paycheck_presenters: @paycheck_presenters %>