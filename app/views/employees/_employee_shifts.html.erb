<div class="span8" id="employee-shifts">
  <div class="row">
    <div class="span6">
      <h3 class="table-title-right">Shifts</h3>
    </div>
    <div class="span2 padtop">
      <div class="buttons">
        <%= link_to 'New shift', new_employee_shift_path(employee), class: 'btn btn-mini', type: 'button' %>
      </div>
    </div>
  </div>
  <table class="table table-condensed table-striped">
    <tr>
      <th>Date</th>
      <th>Net hours</th>
      <th>Type</th>
      <th></th>
    </tr>
    <% shifts.each do |shift| %>
      <tr>
        <td><%= shift.date %></td>
        <td><%= shift.net_time %></td>
        <td><%= shift.shift_type.shift_type.titlecase %></td>
        <td class="buttons"><%= link_to 'details', shift_path(shift), class: 'btn btn-mini', type: 'button' %></td>
      </tr>
    <% end %>
  </table>
</div>