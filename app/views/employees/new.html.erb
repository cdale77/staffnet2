<% provide(:title, 'New employee') %>
<div class="row">
  <div class="span8 offset2">
    <h1>New employee</h1>
    <%= form_for(@employee) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="row">
          <div class="span4">
            <div class="input">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>
          </div>
          <div class="span4">
            <div class="input">
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span4">
            <div class="input">
              <%= f.label :phone %>
              <%= f.text_field :phone %>
            </div>
          </div>
          <div class="span4">
            <div class="input">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span4">
            <div class="input">
              <%= f.label :address1, 'Address line 1' %>
              <%= f.text_field :address1 %>
            </div>
          </div>
          <div class="span4">
            <div class="input">
              <%= f.label :address2, 'Address line 2' %>
              <%= f.text_field :address2 %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span4">
            <div class="input">
              <%= f.label :city %>
              <%= f.text_field :city %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :state %>
              <%= f.select :state, us_states  %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :zip %>
              <%= f.text_field :zip, class: 'zip' %>
            </div>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="span2">
            <div class="input">
              <%= f.label :title %>
              <%= f.select :title, options_for_select([ ['Asst. Director', 'asst_director'], ['Director', 'director'],
                                                        ['Organizer', 'organizer'], ['Field Manager', 'field_manager'],
                                                        ['Canvasser', 'canvasser'] ] )  %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :pay_hourly %>
              <%= f.text_field :pay_hourly %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :pay_daily %>
              <%= f.text_field :pay_daily %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :active %>
              <%= f.check_box :active, checked: true %>
            </div>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="span2">
            <%= f.label :fed_filing_status %>
            <%= f.text_field :fed_filing_status %>
          </div>
          <div class="span2">
            <%= f.label :ca_filing_status %>
            <%= f.text_field :ca_filing_status %>
          </div>
          <div class="span2">
            <%= f.label :fed_allowances %>
            <%= f.text_field :fed_allowances %>
          </div>
          <div class="span2">
            <%= f.label :ca_allowances %>
            <%= f.text_field :ca_allowances %>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="span2">
            <div class="input">
              <%= f.label :gender %>
              <%= f.select :gender, options_for_select([['',''], ['Female', 'f'], ['Male', 'm']]) %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :dob %>
              <%= f.date_select :dob %>
            </div>
          </div>
          <div class="span2">
            <div class="input">
              <%= f.label :hire_date %>
              <%= f.date_select :hire_date %>
            </div>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="span8">
            <%= f.submit 'New employee', class: 'btn btn-large btn-primary' %>
          </div>
        </div>
    <% end %>
  </div>
</div>