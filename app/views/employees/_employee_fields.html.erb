<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span3">
    <div class="input">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span3">
    <div class="input">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3">
    <div class="input">
      <%= f.label :address1, 'Address line 1' %>
      <%= f.text_field :address1 %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :address2, 'Address line 2' %>
      <%= f.text_field :address2 %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :state %>
      <%= f.select :state, us_states  %>
    </div>
  </div>
  <div class="span1">
    <div class="input">
      <%= f.label :zip %>
      <%= f.text_field :zip, class: 'zip' %>
    </div>
  </div>
</div>
<hr />
<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :title %>
      <%= f.select :title, options_for_select([ ['Asst. Director', 'asst_director'], ['Director', 'director'],
                                                ['Organizer', 'organizer'], ['Field Manager', 'field_manager'],
                                                ['Canvasser', 'canvasser'] ], employee.title )  %>
    </div>
  </div>
  <div class="span1 spacer"></div>
  <div class="span1">
    <div class="input">
      <%= f.label :pay_hourly, 'Pay hrly' %>
      <%= f.text_field :pay_hourly %>
    </div>
  </div>
  <div class="span1 ">
    <div class="input">
      <%= f.label :pay_daily %>
      <%= f.text_field :pay_daily %>
    </div>
  </div>
  <div class="span1 spacer"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>
  </div>
</div>
<hr />
<div class="row">
  <div class="row">
    <div class="span8">
      <div class="span5">
        <div id="filing_status">
          <p>Filing status</p>
        </div>
      </div>
      <div class="span2">
        <div id="filing_status">
          <p>Allowances</p>
        </div>
      </div>
    </div>
  </div>
  <div class="span2">
    <div class="input">
      <%= f.label :fed_filing_status, 'Federal' %>
      <%= f.select :fed_filing_status, options_for_select(filing_status_options, employee.fed_filing_status) %>
    </div>
  </div>
  <div class="span2">
    <div class="input">
      <%= f.label :ca_filing_status, 'California' %>
      <%= f.select :ca_filing_status, options_for_select(filing_status_options, employee.ca_filing_status) %>
    </div>
  </div>
  <div class="span1 spacer"></div>
  <div class="span1">
    <div class="input">
      <%= f.label :fed_allowances, 'Federal' %>
      <%= f.text_field :fed_allowances %>
    </div>
  </div>
  <div class="span1">
    <div class="input">
      <%= f.label :ca_allowances, 'California' %>
      <%= f.text_field :ca_allowances %>
    </div>
  </div>
</div>
<hr />
<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :gender %>
      <%= f.select :gender, options_for_select([['',''], ['Female', 'f'], ['Male', 'm']], employee.gender) %>
    </div>
  </div>
  <div class="span2">
    <div class="input">
      <%= f.label :dob %>
      <%= f.text_field :dob, 'data-behaviour' => 'datepicker' %>
    </div>
  </div>
  <div class="span2">
    <div class="input">
      <%= f.label :hire_date %>
      <%= f.text_field :hire_date, 'data-behaviour' => 'datepicker' %>
    </div>
  </div>
</div>
<hr />