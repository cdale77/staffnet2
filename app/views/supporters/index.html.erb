<% provide(:title, 'Supporters') %>
<h1>Supporters</h1>
<div class="row">
  <div class="col-md-2">
    <%= button_tag 'Search form', class: 'btn-xs btn-default field-toggle', id: 'btn-search-form-toggle',
                                  data: { toggle: 'collapse', target: "#search-form" }%>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="collapse" id="search-form">
      <%= search_form_for @search do |f| %>
        <%= f.condition_fields do |c| %>
          <%= render 'shared/forms/condition_fields', f: c %>
        <% end %>
        <p><%= link_to_add_fields "Add conditions", f, :condition %></p>
        <div class="row">
          <div class="col-md-2">
            <%= f.submit "Search", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Type</th>
    <th>Source</th>
  </tr>
  <%= render @supporters %>
</table>