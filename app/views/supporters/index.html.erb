<% provide(:title, 'All supporters') %>
<h1>All supporters</h1>
<div class="row">
  <div class="span12">
    <%= search_form_for @search do |f| %>
      <%= f.condition_fields do |c| %>
        <%= render 'shared/forms/condition_fields', f: c %>
      <% end %>
      <p><%= link_to_add_fields "Add conditions", f, :condition %></p>
      <div class="row">
        <div class="span12">
          <%= f.submit "Search", class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-condensed table-striped">
  <%= will_paginate @supporters %>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Type</th>
    <th>Source</th>
    <th></th>
  </tr>
  <%= render @supporters %>
</table>