<% provide(:title, 'Edit shift type') %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Edit shift type</h1>
    <%= simple_form_for(@shift_type) do |f| %>
      <div class="row">
        <div class="col-md-3">
          <%= f.input :name %>
        </div>
        <div class="col-md-3">
          <%= f.input :fundraising_shift %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <%= f.submit 'Edit shift type', class: 'btn btn-large btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>