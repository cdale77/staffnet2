<% provide(:title, 'New user') %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>New user</h1>
    <%= simple_form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= render partial: 'user_fields', locals: { user: @user, f: f } %>
        <div class="row">
          <div class="col-md-4">
            <%= f.input :password %>
          </div>
          <div class="col-md-4">
            <%= f.input :password_confirmation, label: 'Confirmation' %>
          </div>
        </div>
      <%= render 'shared/forms/submit_button', f: f %>
    <% end %>
  </div>
</div>
