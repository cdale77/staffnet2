<% provide(:title, 'Edit user') %>
<h1>Edit user</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <br />

        <%= f.submit 'Sign in', class: 'btn btn-large btn-primary' %>

    <% end %>
  </div>
</div>