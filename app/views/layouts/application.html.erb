<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <% if current_user %>
      <%= render "layouts/nav" %>
    <% end %>
    <div id="main-wrapper">
      <div class="container container-main">
        <%= render "layouts/flash" %>
        <%= yield %>
      </div>
    </div>
    <%= render "layouts/footer" %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
