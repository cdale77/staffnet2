<div class="row">
  <div class="span6">
    <h4>Supporter: <%= @supporter.full_name %></h4>
  </div>
</div>
<div class="row">
  <div class="span2">
    <%= f.label :date %>
    <%= f.text_field :date, 'data-behaviour' => 'datepicker'  %>
  </div>
  <div class="span1">
    <%= f.input :amount %>
  </div>
  <div class="span1 spacer"></div>
  <div class="span2">
    <%= f.input :donation_type, collection: [['Credit Card', 'credit'], ['Cash', 'cash'], ['Check', 'check']], selected: donation.donation_type %>
  </div>
  <div class="span2">
    <%= f.input :source, collection: [['Phone', 'phone'], ['Door', 'door'], ['Street', 'street'], ['Web', 'web']], selected: donation.source %>
  </div>
  <div class="span2">
    <%= f.input :campaign, collection: [['Prop 13', 'prop13']], selected: donation.campaign %>
  </div>
</div>

<%= render 'shared/forms/notes_field', f: f %>