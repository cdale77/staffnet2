<% provide(:title, "All donations") %>
<h1>All donations</h1>
<% cache "ransack-form-v1" do %>
  <%= render "shared/index/search_fields", search: @search %>
<% end %>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Type</th>
    <th>Source</th>
    <th></th>
  </tr>
  <%= render "donations",
             donation_presenters: @donation_presenters %>
</table>
<%= will_paginate @donation_presenters %>