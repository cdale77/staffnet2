<% provide(:title, 'New donation') %>
<div class="row">
  <div class="span10 offset1">
    <h1>New donation</h1>
    <%= simple_form_for([@supporter, @donation]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'donation_fields', supporter: @supporter, donation: @donation, payment: @payment, payment_fields: true, f: f %>
      <%= render 'shared/forms/submit_button', f: f %>
    <% end %>
  </div>
</div>