<% provide(:title, 'New task type') %>
<div class="row">
  <div class="span4 offset4">
    <h1>New task type</h1>
    <%= form_for(@task_type) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render partial: 'task_type_fields', locals: { task_type: @task_type, f: f } %>
      <div class="row">
        <div class="span2">
          <%= f.submit 'New task type', class: 'btn btn-large btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>