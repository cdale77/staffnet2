<% provide(:title, 'New task') %>
<div class="row">
  <div class="span4 offset4">
    <h1>New task</h1>
    <%= simple_form_for(@task) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render partial: 'task_fields', locals: { task: @task, f: f } %>
      <%= render 'shared/forms/submit_button', f: f %>
    <% end %>
  </div>
</div>