<div class="row">
  <div class="span6">
    <h4>Employee: <%= @employee.full_name %></h4>
  </div>
</div>
<div class="row">
  <div class="span2">
    <%= f.label :date %>
    <%= f.text_field :date, 'data-behaviour' => 'datepicker' %>
  </div>
  <div class="span2">
    <%= f.label :shift_type_id, 'Shift type' %>
    <%= f.select :shift_type_id, options_from_collection_for_select(ShiftType.all, :id, :human_name, shift.shift_type_id) %>
  </div>
</div>
<div class="row">
  <div class="span2">
    <%= f.label :time_in %>
    <%= f.text_field :time_in, 'data-behaviour' => 'timepicker' %>
  </div>
  <div class="span2">
    <%= f.label :time_out %>
    <%= f.text_field :time_out, 'data-behaviour' => 'timepicker' %>
  </div>
  <div class="span2">
    <%= f.input :break_time %>
  </div>
</div>
<div class="row">
  <div class="span2">
    <%= f.input :travel_reimb, label: 'Travel reimbursement' %>
  </div>
</div>
<%= render 'shared/forms/notes_field', f: f %>
