<% provide(:title, "New shift") %>
<div class="row">
  <div class="span10 offset1">
    <h1>New shift</h1>
    <%= simple_form_for([@employee, @shift]) do |f| %>
      <%= render "shared/error_messages",
                 object: f.object %>
      <%= render "shift_fields",
                 shift: @shift,
                 f: f  %>
      <%= render "shared/forms/submit_button",
                 f: f %>
    <% end %>
  </div>
</div>