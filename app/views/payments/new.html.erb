<% provide(:title, 'New payment') %>
<div class="row">
  <div class="col-md-12">
    <h1>New payment</h1>
    <div class="col-md-12 row">
      <h4>Supporter: <%= supporter.full_name %></h4>
      <h4>Donation: <%= "#{number_to_currency(donation.amount)} on #{donation.date}" %></h4>
    </div>
    <div id="new-payment-profile-fields" class="collapse"></div>
    <%= simple_form_for([@donation, @payment]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'payment_fields', supporter: @supporter,
                                   donation: @donation,
                                   payment: @payment,
                                   payment_profiles: @payment_profiles,
                                   f: f %>
      <%= render 'shared/forms/submit_button', f: f %>
    <% end %>
  </div>
</div>