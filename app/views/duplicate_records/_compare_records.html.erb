<div class="row">
  <div class="col-md-12">
    <%= simple_form_for presenter.model,
                       url: resolve_duplicate_record_path(presenter.model),
                       method: :patch,
                       remote: true do |f| %>

      <div class="col-md-12">
        Primary record:<br/>
        <div class="col-md-6">
          <%= radio_button_tag :primary_record, 
                                presenter.primary_record.id, 
                                true, class: "radio inline" %>
        </div>
        <div class="col-md-6">
          <%= radio_button_tag :primary_record, 
                                presenter.duplicate_record.id,
                                false, class: "radio inline" %>
        </div>
      <div class="col-md-6">
        <h3>Record 1</h3>
        <%= f.label "First name" %>
        <%# f.text_field, #id: "primary_first_name", 
                          name: "primary_first_name",
                          value: presenter.primary_record.first_name %>
      </div>
      <div class="col-md-6">
        <h3>Record 2</h3>
        <%= presenter.duplicate_record.full_name %>
      </div>
    </div>
    <%= f.button :submit, "Test" %>
  <% end %>
</div>
