<div class="col-md-12 row button-container">
  <div class="buttons">
    <% if admin_user? %>
      <%= link_to 'edit', polymorphic_path(record, action: :edit), class: 'btn btn-xs btn-default',
                  role: 'button' %>
      <%= link_to 'delete', record, method: :delete,
                  data: { confirm: 'You sure?' },
                  class: 'btn btn-xs btn-danger', role: 'button' %>
    <% end %>
  </div>
</div>
