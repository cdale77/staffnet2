<% provide(:title, "Batch details") %>
<h1>Batch details</h1>
<div class="col-md-12 row button-container">
  <div class="buttons">
    <% if admin_user? && @deposit_batch.not_approved %>
      <%= link_to "approve", edit_deposit_batch_path(@deposit_batch.model),
                  class: "btn btn-md btn-primary",
                  type: "button" %>
    <% end %>
  </div>
</div>
<div class="cold-md-12 row record-display">
  <div class="col-md-4 record-column">
    <table>
      <tr>
        <th>Type</th>
        <td><%= @deposit_batch.human_name %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= @deposit_batch.formatted_date %></td>
      </tr>
      <tr>
        <th>Donations</th>
        <td><%= @deposit_batch.payment_count %></td>
      </tr>
      <tr>
        <th>Total</th>
        <td><%= @deposit_batch.payment_total %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-4 record-column">
    <table>
      <tr>
        <th>Approved by</th>
        <td><%= @deposit_batch.approved_by %></td>
      </tr>
      <tr>
        <th>Receipt number</th>
        <td><%= @deposit_batch.receipt_number %></td>
      </tr>
      <%= render "shared/profiles/magic_columns", record: @deposit_batch %>
    </table>
  </div>
</div>
<%= render "batch_payments", payments: @deposit_batch.payments %>