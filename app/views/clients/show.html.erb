<% provide(:title, @client.name) %>
<%= render 'shared/profiles/profile_header', title: 'Client' %>
<%= render 'shared/profiles/profile_buttons', record: @client %>
<div class="row">
  <div class="span12">
    <div class="row record-display">
      <div class="row span4 record-column">
        <table>
          <tr>
            <th>Name</th>
            <td><%= @client.name %></td>
          </tr>
          <%= render 'shared/profiles/address', record: @client %>
        </table>
      </div>
      <div class="row span4 record-column">
        <table>
          <tr>
            <th>Contact</th>
            <td><%= @client.contact_name %></td>
          </tr>
          <tr>
            <th>Phone</th>
            <td><%= @client.contact_phone %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @client.contact_email %></td>
          </tr>
          <tr>
            <th>Web</th>
            <td><%= @client.uri %></td>
          </tr>
          <%= render 'shared/profiles/magic_columns', record: @client %>
        </table>
      </div>
    </div>
  </div>
</div>



