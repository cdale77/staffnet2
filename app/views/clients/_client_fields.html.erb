<div class="row">
  <div class="span6">
    <div class="input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3">
    <div class="input">
      <%= f.label :address1, 'Address line 1' %>
      <%= f.text_field :address1 %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :address2, 'Address line 2' %>
      <%= f.text_field :address2 %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span2">
    <div class="input">
      <%= f.label :address_city %>
      <%= f.text_field :city %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :address_state %>
      <%= f.select :state, us_states  %>
    </div>
  </div>
  <div class="span1">
    <div class="input">
      <%= f.label :address_zip %>
      <%= f.text_field :zip, class: 'zip' %>
    </div>
  </div>
</div>
<hr />
<div class="row">
  <div class="span6">
    <div class="input">
      <%= f.label :contact_name %>
      <%= f.text_field :contact_name %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span3">
    <div class="input">
      <%= f.label :contact_email %>
      <%= f.text_field :contact_email %>
    </div>
  </div>
  <div class="span1"></div>
  <div class="span2">
    <div class="input">
      <%= f.label :contact_phone %>
      <%= f.text_field :contact_phone %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6">
    <div class="input">
      <%= f.label :uri, 'Web address' %>
      <%= f.text_field :uri %>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6">
    <div class="input">
      <%= f.label :notes %>
      <%= f.text_area :notes %>
    </div>
  </div>
</div>